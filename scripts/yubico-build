#!/bin/bash
-xa
export USER_ID=1000 
export GROUP_ID=1000 
export ARTIFACT_DIR=ubuntu-x64 

cd ..
set -a
source <(cat sdb.env | sed -e '/^#/d;/^\s*$/d' -e "s/'/'\\\''/g" -e "s/=\(.*\)/='\1'/g")
source <(cat sol.env | sed -e '/^#/d;/^\s*$/d' -e "s/'/'\\\''/g" -e "s/=\(.*\)/='\1'/g")
source <(cat yub.env | sed -e '/^#/d;/^\s*$/d' -e "s/'/'\\\''/g" -e "s/=\(.*\)/='\1'/g")
set +a

/bin/bash yubico-net-sdk/Yubico.NativeShims/build-ubuntu.sh $ARTIFACT_DIR $GROUP_ID $USER_ID

docker build tag kindtek/yubico-safedb-ubuntu kindtek/yubico-safedb-ubuntu:latest
docker build push kindtek/yubico-safedb-ubuntu:latest
